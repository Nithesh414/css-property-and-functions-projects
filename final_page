let count=0;
console.log(arr.length)
button2.addEventListener('click',()=>{
    if(count===arr.length-1){
 count=0;
    }
    else{
        count++
    }  
     body.style.backgroundImage = `url("${arr[count].images}")`;
     text.textContent=arr[count].text
     desp.innerText=arr[count].desp
})
button1.addEventListener('click',()=>{
    if(count==0){
 count=arr.length-1;
    }
    else{
       count--;
    } 
     body.style.backgroundImage = `url("${arr[count].images}")`;
     text.textContent=arr[count].text
     desp.innerText=arr[count].desp
})

</script>
